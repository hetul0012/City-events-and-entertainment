@model City_events_and_entertainment.Models.Feedback

@{
    ViewData["Title"] = "Edit Feedback";
}

<h2 class="mb-4">Edit Feedback</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Comment" class="form-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Museum</label>
        <select asp-for="MuseumId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Museums, "Id", "Name"))"></select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
