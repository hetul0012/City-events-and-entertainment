@model City_events_and_entertainment.Models.Feedback

@{
    ViewData["Title"] = "Delete Feedback";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this feedback?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Museum</dt>
        <dd class="col-sm-10">@Model.Museum?.Name</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
