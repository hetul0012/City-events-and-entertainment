@model City_events_and_entertainment.Models.Feedback
@{
    ViewData["Title"] = "Add Feedback";
}
<h2>Add Feedback</h2>
<form asp-action="Create" method="post" class="form-group">
    <input type="hidden" asp-for="MuseumId" />
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" type="number" class="form-control" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>
