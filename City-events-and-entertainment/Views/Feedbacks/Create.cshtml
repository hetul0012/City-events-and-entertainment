@model City_events_and_entertainment.Models.Feedback

@{
    ViewData["Title"] = "Create Feedback";
}

<div class="container mt-4">
    <h2>Add Feedback</h2>

    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="Comment" class="form-label"></label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Rating" class="form-label"></label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MuseumId" class="form-label"></label>
            <select asp-for="MuseumId" class="form-select" asp-items="ViewBag.MuseumId"></select>
            <span asp-validation-for="MuseumId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
