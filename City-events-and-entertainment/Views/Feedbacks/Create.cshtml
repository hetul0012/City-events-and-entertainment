@model City_events_and_entertainment.Models.Feedback

@{
    ViewData["Title"] = "Add Feedback";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MuseumId" class="control-label"></label>
        <select asp-for="MuseumId" class="form-control" asp-items="@(ViewBag.MuseumId as SelectList)">
            <option value="">-- Select Museum --</option>
        </select>
        <span asp-validation-for="MuseumId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
