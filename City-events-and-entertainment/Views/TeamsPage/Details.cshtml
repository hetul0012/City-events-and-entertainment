@model City_events_and_entertainment.Models.Team
@{
    ViewData["Title"] = "Team Details";
}

<h2>Team Details</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Coach</dt>
        <dd class="col-sm-9">@Model.Coach</dd>

        <dt class="col-sm-3">City</dt>
        <dd class="col-sm-9">@Model.City</dd>
    </dl>

    <h4>Players</h4>
    @if (Model.Players != null && Model.Players.Any())
    {
        <ul>
            @foreach (var player in Model.Players)
            {
                <li>@player.Name - @player.Role</li>
            }
        </ul>
    }
    else
    {
        <p>No players assigned to this team.</p>
    }
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
