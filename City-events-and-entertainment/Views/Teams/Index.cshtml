@model IEnumerable<City_events_and_entertainment.Models.Team>
@{
    ViewData["Title"] = "Teams";
}

<h2>Teams</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Create New Team</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Coach</th>
            <th>City</th>
            <th>Players</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Coach</td>
                <td>@team.City</td>
                <td>@(team.Players?.Count() ?? 0)</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@team.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@team.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@team.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
