@model IEnumerable<City_events_and_entertainment.Models.Museum>

<div class="container mt-4">
    <h2 class="text-center mb-4">Explore Our Museums</h2>
    @foreach (var museum in Model)
    {
        <div class="card shadow mb-4">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="@museum.ImageUrl" class="card-img" alt="@museum.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@museum.Name</h5>
                        <p><strong>Location:</strong> @museum.Location</p>
                        <p>@museum.Description</p>

                        @if (museum.Team != null)
                        {
                            <p><strong>Associated Team:</strong> @museum.Team.Name</p>
                        }

                        <p>
                            <strong>Facilities:</strong>
                            @foreach (var mf in museum.MuseumFacilities)
                            {
                                <span class="badge bg-info text-dark">@mf.Facility.Name</span>
                            }
                        </p>

                        <a class="btn btn-success" href="/Bookings/Create?museumId=@museum.Id">Book Now</a>
                        <a class="btn btn-outline-primary" href="/Feedbacks/Create?museumId=@museum.Id">Add Feedback</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
