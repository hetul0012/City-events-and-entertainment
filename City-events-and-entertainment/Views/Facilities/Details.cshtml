@model City_events_and_entertainment.Models.Facility
@{
    ViewData["Title"] = "Facility Details";
}
<h2>Facility Details</h2>

<div class="card p-3">
    <h4>@Model.Name</h4>

    <h5 class="mt-3">Linked Museums:</h5>
    @if (Model.MuseumFacilities != null && Model.MuseumFacilities.Any())
    {
        <ul>
            @foreach (var mf in Model.MuseumFacilities)
            {
                <li>@mf.Museum?.Name</li>
            }
        </ul>
    }
    else
    {
        <p>No museums linked to this facility.</p>
    }
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
