@model IEnumerable<City_events_and_entertainment.Models.Feedback>
@{
    ViewData["Title"] = "Feedbacks";
}

<h2>Feedbacks</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Add Feedback</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Comment</th>
            <th>Rating</th>
            <th>User</th>
            <th>Museum</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.Comment</td>
                <td>@feedback.Rating</td>
                <td>@feedback.UserId</td>
                <td>@feedback.Museum?.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@feedback.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@feedback.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@feedback.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
