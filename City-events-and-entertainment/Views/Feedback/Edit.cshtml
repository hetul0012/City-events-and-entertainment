@model City_events_and_entertainment.Models.Feedback
@{
    ViewData["Title"] = "Edit Feedback";
}

<h2>Edit Feedback</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MuseumId">Museum</label>
        <select asp-for="MuseumId" class="form-control" asp-items="ViewBag.Museums"></select>
        <span asp-validation-for="MuseumId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
