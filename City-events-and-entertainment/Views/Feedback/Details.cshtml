@model City_events_and_entertainment.Models.Feedback
@{
    ViewData["Title"] = "Feedback Details";
}

<h2>Feedback Details</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Comment</dt>
        <dd class="col-sm-9">@Model.Comment</dd>

        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">@Model.Rating</dd>

        <dt class="col-sm-3">Museum</dt>
        <dd class="col-sm-9">@Model.Museum?.Name</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
