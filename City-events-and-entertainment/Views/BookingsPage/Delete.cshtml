@model City_events_and_entertainment.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>
<h4>Are you sure you want to delete this booking?</h4>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Visitor Name</dt>
        <dd class="col-sm-9">@Model.VisitorName</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-3">Time</dt>
        <dd class="col-sm-9">@Model.Time</dd>

        <dt class="col-sm-3">Museum</dt>
        <dd class="col-sm-9">@Model.Museum?.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
