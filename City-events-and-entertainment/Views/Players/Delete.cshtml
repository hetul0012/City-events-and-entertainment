@model City_events_and_entertainment.Models.Player
@{
    ViewData["Title"] = "Delete Player";
}

<h2>Delete Player</h2>
<h4>Are you sure you want to delete this player?</h4>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.Age</dd>

        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@Model.Role</dd>

        <dt class="col-sm-3">Team</dt>
        <dd class="col-sm-9">@Model.Team?.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
