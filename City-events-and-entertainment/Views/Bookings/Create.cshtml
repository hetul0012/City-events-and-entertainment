@model City_events_and_entertainment.Models.Booking
@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="VisitorName"></label>
        <input asp-for="VisitorName" class="form-control" />
        <span asp-validation-for="VisitorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" class="form-control" type="time" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MuseumId">Museum</label>
        <select asp-for="MuseumId" class="form-control" asp-items="ViewBag.Museums"></select>
        <span asp-validation-for="MuseumId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Book</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
