@model City_events_and_entertainment.Models.Booking
@{
    ViewData["Title"] = "Book Event";
}
<h2>Book Event</h2>
<form asp-action="Create" method="post" class="form-group">
    <input type="hidden" asp-for="MuseumId" />
    <div class="form-group">
        <label asp-for="VisitorName"></label>
        <input asp-for="VisitorName" class="form-control" />
        <span asp-validation-for="VisitorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfPersons"></label>
        <input asp-for="NumberOfPersons" class="form-control" />
        <span asp-validation-for="NumberOfPersons" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" type="time" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Confirm Booking</button>
</form>
