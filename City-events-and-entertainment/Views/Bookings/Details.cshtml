@model City_events_and_entertainment.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <h2>Booking Details</h2>

    <dl class="row">
        <dt class="col-sm-3">Visitor Name</dt>
        <dd class="col-sm-9">@Model.VisitorName</dd>

        <dt class="col-sm-3">Number of Persons</dt>
        <dd class="col-sm-9">@Model.NumberOfPersons</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-3">Time</dt>
        <dd class="col-sm-9">@Model.Time.ToShortTimeString()</dd>

        <dt class="col-sm-3">Museum</dt>
        <dd class="col-sm-9">@Model.Museum?.Name</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
