@model IEnumerable<City_events_and_entertainment.Models.Booking>
@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>
<a class="btn btn-primary mb-3" asp-action="Create">New Booking</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Visitor Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Museum</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.VisitorName</td>
                <td>@booking.Date.ToShortDateString()</td>
                <td>@booking.Time</td>
                <td>@booking.Museum?.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@booking.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@booking.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@booking.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
