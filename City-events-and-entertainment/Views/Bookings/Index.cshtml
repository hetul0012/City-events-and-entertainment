@model IEnumerable<City_events_and_entertainment.Models.Booking>
@{
    ViewData["Title"] = "Bookings";
}

<h2 class="text-center mb-4">All Bookings</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">Add Booking</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Visitor Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Museum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.VisitorName</td>
                <td>@booking.Date.ToShortDateString()</td>
                <td>@booking.Time</td>
                <td>@booking.Museum?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
