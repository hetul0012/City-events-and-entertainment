@model City_events_and_entertainment.Models.Booking
@{
    ViewData["Title"] = "Edit Booking";
}
<h2>Edit Booking</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="VisitorName"></label>
        <input asp-for="VisitorName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumberOfPersons"></label>
        <input asp-for="NumberOfPersons" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" type="time" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
