@model City_events_and_entertainment.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<h2 class="text-center mb-4">Delete Booking</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this booking?
</div>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Visitor Name</dt>
        <dd class="col-sm-9">@Model.VisitorName</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-3">Time</dt>
        <dd class="col-sm-9">@Model.Time</dd>

        <dt class="col-sm-3">Museum</dt>
        <dd class="col-sm-9">@Model.Museum?.Name</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3 text-center">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
