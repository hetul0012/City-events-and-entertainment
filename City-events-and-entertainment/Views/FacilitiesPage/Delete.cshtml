@model City_events_and_entertainment.Models.Facility
@{
    ViewData["Title"] = "Delete Facility";
}

<h2>Delete Facility</h2>
<h4>Are you sure you want to delete this facility?</h4>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
