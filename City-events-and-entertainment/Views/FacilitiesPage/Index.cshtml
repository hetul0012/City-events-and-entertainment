@model IEnumerable<City_events_and_entertainment.Models.Facility>
@{
    ViewData["Title"] = "Facilities";
}

<h2>Facilities</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Add Facility</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var facility in Model)
        {
            <tr>
                <td>@facility.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@facility.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@facility.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@facility.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
